{% extends 'base.html.twig' %}

{% block title %}{{ config.app_name }} - {{ view_name }}{% endblock %}

{% block body %}

<div>
  <div class="h4">{{ view_name }}</div>
  <div class="table-responsive">
    <table class="table table-sm" id="memberTable">
    {% for group, records in group %}
      <thead>
        <tr><th class="h5" colspan="99">{{ group|default('Not Set') }}</th></tr>
        <tr>
          <th class="text-center">Roll #</th>
          <th></th>
          <th>Name</th>
          {% if show_status %}
          <th>Status</th>
          {% endif %}
          <th>Class</th>
          <th>Email</th>
          <th>Phone Number</th>
          <th>Mailing Address</th>
          <th>Score</th>
        </tr>
      </thead>
      <tbody>
        {% for record in records %}
        {% include 'directory/partials/directory_row.html.twig' %}
        {% endfor %}
      </tbody>
    {% endfor %}
    </table>
  </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
{% endblock %}
